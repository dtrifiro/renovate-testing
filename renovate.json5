// vim: ft=jsonc
{
  "dependencyDashboard": true,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["quay/automation-*/docker-bake.hcl"],
      "matchStrings": [
        // https://docs.renovatebot.com/modules/datasource/github-releases/
        "\\s+(?<name>.*)_VERSION\\s?=\\s?\"(?<currentValue>.*)\".*# renovate: (?<datasource>.*) depName=(?<depName>\\S+)(\\s+)?(?<comments>.*)?"
      ]
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["quay/automation-base-*/docker-bake.hcl"],
      "matchStrings": [
        // https://docs.renovatebot.com/modules/datasource/docker/
        "\\s+(?<name>.*)_TAG\\s?=\\s?\"(?<currentValue>.*)\".*# renovate: (?<datasource>.*) depName=(?<depName>\\S+)(\\s+)?(?<comments>.*)?"
      ]
    }
  ]
}
